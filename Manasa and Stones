#include <assert.h>
#include <limits.h>
#include <math.h>
#include <stdbool.h>
#include <stddef.h>
#include <stdint.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int main()
{

//code could have been a lot more efficient had it been in c++ using the inbuilt string library
    int t,i;
    scanf("%d\n",&t);
    for(i=0;i<t;i++)
    {
        int n,a,b;
        scanf("%d%d%d",&n,&a,&b);
        if(a==b)
            printf("%d\n",a*(n-1));
        else if(b>a){
        for(int j=n-1;j>=0;j--)
        {
            printf("%d ",a*j + b*(n-1-j));
        }
        printf("\n");}
        else
        {
            for(int j=n-1;j>=0;j--)
            {
                printf("%d ",b*j + a*(n-1-j));
            }
            printf("\n");
        }
    }
}

//program works fine but could have been written in a more better format.
//you have not returned 0 from the main function, one shilud adher to good programming practices.


